    <script type="text/javascript">
        $(document).ready(function () {
            loadData();
        });

        function loadData() {
            alert("Load data progressing ...");

            $.ajax({
                url: '/Ajax/GetTravels',
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    alert("Response:" + result.message);
                    var res = result.data;
                    var html = '';
                    $.each(res, function (key, item) {
                       html += '<tr>';  // Mở thẻ <tr> cho mỗi hàng
            html += '<td>' + item.name + '</td>';           // Name
            html += '<td>' + item.location + '</td>';       // Location
            html += '<td>' + item.price + '</td>';          // Price
            html += '<td>' + item.createdBy + '</td>';      // Created By
            html += '<td>' + item.createdDate + '</td>';    // Created Date
            html += '<td>' + item.updatedBy + '</td>';      // Updated By
            html += '<td>' + item.updatedDate + '</td>';    // Updated Date
            html += '<td>' + item.note + '</td>';            // Note
            html += '<td>' + (item.isActive ? 'Yes' : 'No') + '</td>'; // Active
            html += '</tr>';  // Đóng thẻ <tr>
                    });
                    $('.tblTravels').html(html);
                },
                error: function (xhr, error) {
                    alert(xhr.statusText);
                    console.log(xhr, error);  // In ra lỗi trong console
                }
            });
        }
    </script>

